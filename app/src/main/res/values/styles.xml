<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="Theme.MyTheme" parent="AppTheme.Base">

    </style>


    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>


        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorControlHighlight">#FF5722</item>
        <item name="colorSwitchThumbNormal">#e406d9</item>
        <item name="colorButtonNormal">@color/colorAccent</item>

        <item name="android:windowBackground">@color/windowBackground</item>


        <item name="android:textColorHint">#AAA</item>


        <!--item name="android:windowBackground">@color/windowBackground</item-->
        <!--item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:colorBackground">@color/background_material_dark</item-->

        <!-- MaterialDrawer specific values
        <item name="material_drawer_primary_text">@color/colorPrimaryText</item>
        <item name="material_drawer_selected_text">@color/colorPrimary</item>
        -->

    </style>

    <style name="Theme.MyThemeBottom" parent="Theme.MyTheme">
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="Theme.MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Message" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/fondo_titulos</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="Theme.Titulos" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/fondo_titulos</item>
    </style>

    <style name="Theme.TitulosConBordeRedondeoArriba" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/fondo_titulos_con_redondeo_borde_arriba</item>
    </style>

    <style name="Theme.TitulosSinBordeRedondeoArriba" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/fondo_titulos_sin_redondeo_borde_arriba</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.MyTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.MyTransparent" parent="Theme.MyTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <!--item name="android:textStyle">italic</item-->
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/botonAmarillo</item>
    </style>

    <style name="Theme.FloatingActionButton" parent="Theme.MyTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="Theme.LoginText" parent="Theme.MyTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Theme.ProgressBar" parent="Theme.MyTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

</resources>
